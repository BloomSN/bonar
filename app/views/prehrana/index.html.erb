<div class="filter" id="filter">
  <a href="#" class="close-menu">Close</a>
  <ul>
    <li><input type="search" id="restaurantSearch" placeholder="Išči" incremental="incremental"></input></li>
    <li>
      vse
      <div class="onoffswitch">
        <input type="checkbox" name="all" class="onoffswitch-checkbox" id="all_switch" checked="checked">
        <label class="onoffswitch-label" for="all_switch">
          <div class="onoffswitch-inner"></div>
          <div class="onoffswitch-switch"></div>
        </label>
      </div>
    </li>
    <% @features.each do |feature| %>
    <li>
      <%= feature.title %>
      <div class="onoffswitch">
          <input type="checkbox" name="celiac" class="onoffswitch-checkbox feature-filter" id="<%= feature.title.gsub(' ', '') %>_switch"  data-feature-id="<%= feature.id %>">
          <label class="onoffswitch-label" for="<%= feature.title.gsub(' ', '') %>_switch">
              <div class="onoffswitch-inner"></div>
              <div class="onoffswitch-switch"></div>
          </label>
      </div>
    </li>
    <% end %>
  </ul>
</div>  
<div  class="page-wrap">
  <header class="main-header">
    <a href="#filter" class="open-menu">
      Search
    </a>
  </header>
  <a href="#" id="geolocateIcon" class="hidden"><img height="20px" width="20px" src="<%= path_to_image 'locate.svg' %>"></a>
  <div id='map'></div>
</div>
<%= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?sensor=true' %>
<%= javascript_include_tag 'prehrana' %>
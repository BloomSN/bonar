<% if @faulty.present? %>
## Faulty updates

  <% @faulty.each do |spid| %>
  - <%= spid %>
  <% end %>
<% end %>

<% if @new.present? %>
## New restaurants

  <% @new.each do |r| %>
  - <%= r.name %> - <%= r.spid %> [<%= r.latitude %>, <%= r.longitude %>]
  <% end %>
<% end %>

<% if @disabled.present? %>
## Disabled restaurants

  <% @disabled.each do |r| %>
  - <%= r.name %> - <%= r.spid %>
  <% end %>
<% end %>

<% if @new_features.present? %>
## New features

  <% @new_features.each do |f| %>
  - <%= f.title %> - <%= f.spid %>
  <% end %>
<% end %>
